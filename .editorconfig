# EditorConfig helps maintain consistent coding styles across different editors and IDEs
# Visit https://editorconfig.org for more information

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
# Use UTF-8 character encoding
charset = utf-8
# Use spaces for indentation
indent_style = space
# 4 spaces per indentation level (Python standard)
indent_size = 4
# Unix-style line endings
end_of_line = lf
# Add a final newline to all files
insert_final_newline = true
# Remove trailing whitespace
trim_trailing_whitespace = true

# Python-specific settings
[*.py]
# Follow PEP 8 guidelines
max_line_length = 88  # Black's default
indent_size = 4

# YAML files use 2-space indentation
[*.{yaml,yml}]
indent_size = 2

# Markdown files preserve trailing whitespace for line breaks
[*.md]
trim_trailing_whitespace = false

# JSON files
[*.json]
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_size = 2

# Windows-specific files
[*.{cmd,bat,ps1}]
end_of_line = crlf

# Dockerfile
[Dockerfile]
indent_size = 4

# Makefiles require tabs
[Makefile]
indent_style = tab
