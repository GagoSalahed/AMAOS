# Debug and Logging
DEBUG=false
LOG_LEVEL=INFO

# LLM Configuration
LLM_PROVIDER=openai
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
LLM_API_KEY=your-api-key-here

# System Configuration
SYSTEM_MAX_RETRIES=3
SYSTEM_TIMEOUT=30

# Memory Configuration
MEMORY_TYPE=chroma
MEMORY_PERSIST_DIRECTORY=./memory
MEMORY_COLLECTION_NAME=amaos_memory

# Tool Configuration
TOOL_WEB_SEARCH_ENABLED=true
TOOL_FILE_OPERATIONS_ENABLED=true
TOOL_MAX_FILE_SIZE=10000000

# Agent Configuration
AGENT_MAX_CONCURRENT_TASKS=5
AGENT_HEALTH_CHECK_INTERVAL=60
AGENT_DEFAULT_TIMEOUT=300

# Fallback Configuration
FALLBACK_ENABLED=false
FALLBACK_MAX_RETRIES=3
FALLBACK_TIMEOUT=30
FALLBACK_RECOVERY_STRATEGIES=["retry","simplify","degrade"]

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_KEY_HEADER=X-API-Key
ALLOWED_ORIGINS=["*"]
RATE_LIMIT=100